# Database Configuration
DATABASE_URL=postgres://postgres:postgres123@localhost:5432/gps_trucks_japan
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gps_trucks_japan
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# API Configuration
API_URL=http://localhost:3002
PORT=3002

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Email Configuration (for inquiries)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@gpstrucksjapan.com

# Image Storage
IMAGES_BASE_PATH=/public/images
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Scraper Configuration
SCRAPER_ENABLED=true
SCRAPER_INTERVAL_HOURS=6
SCRAPER_MAX_PAGES=50
SCRAPER_DELAY_MS=3000

# External APIs
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production Settings (set to true in production)
NODE_ENV=development
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=