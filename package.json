{
  "name": "gps-trucks-japan",
  "version": "1.0.0",
  "description": "Japanese Car Export Platform",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin && npm run build",
    "scrape": "cd scrapers && python main.py",
    "db:migrate": "cd database && npm run migrate",
    "db:seed": "cd database && npm run seed"
  },
  "workspaces": [
    "frontend",
    "admin",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "google-translate-api-x": "^10.7.2",
    "pg": "^8.16.3"
  }
}
